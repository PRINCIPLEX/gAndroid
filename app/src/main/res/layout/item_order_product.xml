<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/right_dish_item"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    <!--生活商品-门店详情-单项-->
    <ImageView
            android:id="@+id/iv_product"
            android:layout_width="58dp"
            android:layout_height="62dp"
            android:src="@mipmap/ic_launcher" android:layout_gravity="center"/>
    <TextView
            android:id="@+id/tv_item_life_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="15"
            android:text="新上市猕猴桃"
            android:textColor="@color/color_222222"
            android:textSize="12dp" android:gravity="center_vertical" android:layout_gravity="center"/>

</LinearLayout>