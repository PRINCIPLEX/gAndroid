<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/dark_gray_bg"
>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_major"
            android:orientation="vertical"
    >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
        >

            <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginBottom="@dimen/content_padding"
                    android:layout_marginLeft="@dimen/content_margin"
                    android:layout_marginRight="@dimen/content_margin"
                    android:layout_marginTop="@dimen/content_padding"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ic_phone"
            />

            <EditText
                    android:id="@+id/edit_phone"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:layout_gravity="center_vertical"
                    android:hint="手机号码"
                    android:background="@null"
                    style="@style/Widget.LazyOrder.EditText"
            />

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
        >

            <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginBottom="@dimen/content_padding"
                    android:layout_marginLeft="@dimen/content_margin"
                    android:layout_marginRight="@dimen/content_margin"
                    android:layout_marginTop="@dimen/content_padding"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/login_name"
            />

            <EditText
                    android:id="@+id/edit_user_name"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:layout_gravity="center_vertical"
                    android:hint="用户名"
                    android:background="@null"
                    style="@style/Widget.LazyOrder.EditText"
            />

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
        >

            <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginBottom="@dimen/content_padding"
                    android:layout_marginLeft="@dimen/content_margin"
                    android:layout_marginRight="@dimen/content_margin"
                    android:layout_marginTop="@dimen/content_padding"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ic_email"
            />

            <EditText
                    android:id="@+id/edit_email"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:layout_gravity="center_vertical"
                    android:hint="密保邮箱 (修改密码用，不可更改)"
                    android:background="@null"
                    style="@style/Widget.LazyOrder.EditText"
            />

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/cell_normal"
                android:layout_margin="1dp"
        >

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/content_padding"
                    android:layout_marginLeft="@dimen/content_margin"
                    android:layout_marginRight="@dimen/content_margin"
                    android:layout_marginTop="@dimen/content_padding"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/login_password"
            />

            <EditText
                    android:id="@+id/edit_password"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:layout_gravity="center_vertical"
                    android:inputType="textPassword"
                    android:hint="请输入新密码"
                    android:background="@null"
                    style="@style/Widget.LazyOrder.EditText"
            />

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/cell_normal"
                android:layout_margin="1dp"
        >

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/content_padding"
                    android:layout_marginLeft="@dimen/content_margin"
                    android:layout_marginRight="@dimen/content_margin"
                    android:layout_marginTop="@dimen/content_padding"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/login_password"
            />

            <EditText
                    android:id="@+id/edit_password_again"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:layout_gravity="center_vertical"
                    android:inputType="textPassword"
                    android:hint="请再一次输入新密码"
                    android:background="@null"
                    style="@style/Widget.LazyOrder.EditText"
            />

        </LinearLayout>

    </LinearLayout>

    <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cell_normal"
            android:layout_marginLeft="@dimen/spacing_major"
            android:layout_marginRight="@dimen/spacing_major"
            android:text="注册"
            style="@style/Widget.LazyOrder.Button"
    />
    <LinearLayout
            android:id="@+id/layout_other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:padding="@dimen/content_padding"
            android:orientation="horizontal"
    >

        <TextView
                android:id="@+id/tv_forget_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="忘记密码？"
                android:textColor="@color/secondary_text"
                android:textSize="16.0sp"/>

        <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
        />

        <TextView
                android:id="@+id/tv_go_to_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="去登录"
                android:textColor="@color/secondary_text"
                android:textSize="16.0sp"/>
    </LinearLayout>


</LinearLayout>