<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/dark_gray_bg"
             tools:context="com.gproject.fragment.BookFragment"

>

    <TextView
            android:text="客官~本店已经打烊了哦，请明天再来"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_shop_status"
            android:textAlignment="center"
            android:textColor="@color/color_ffffff" android:background="@color/colorPrimary" android:textSize="18sp"
            android:textStyle="bold" android:visibility="gone"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="3"
                android:layout_weight="1"
                android:gravity="center">

            <ImageButton
                    android:src="@mipmap/ic_fragment_book_th"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_th"
                    android:background="@drawable/btn_th_book"
                    android:layout_weight="1"/>


        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="3"
                android:layout_weight="1"
                android:gravity="center">
            <ImageButton
                    android:src="@mipmap/ic_fragment_book_db"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_db_book"


                    android:id="@+id/btn_db" android:layout_weight="1"/>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>