<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/spacing_minor"
    android:paddingLeft="@dimen/spacing_major"
    android:paddingRight="@dimen/spacing_minor"
    android:paddingBottom="@dimen/spacing_minor"
    android:orientation="horizontal"
    >

    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@mipmap/ic_launcher" android:id="@+id/iv_good"
    />
    <TextView
            android:id="@+id/txt_shopname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="农家小炒肉"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/font_normal"
            android:layout_gravity="center" android:gravity="left" android:layout_marginLeft="10dp"/>

    <TextView
            android:id="@+id/txt_quantity"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/spacing_major"
            android:paddingRight="@dimen/spacing_major"
            tools:text="x 1"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/font_normal"
            android:layout_gravity="center"/>

    <TextView
            android:id="@+id/txt_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="60dp"
            tools:text="￥14.5"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/font_normal"
            android:layout_gravity="center"/>

</LinearLayout>